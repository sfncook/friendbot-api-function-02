{
  "bindings": [
    {
      "authLevel": "anonymous",
      "name": "req",
      "type": "httpTrigger",
      "direction": "in",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "name": "$return",
      "type": "http",
      "direction": "out"
    },
    {
      "name": "todoitems",
      "direction": "in",
      "type": "cosmosDB",
      "connection": "AzureCosmosDBConnection",
      "databaseName": "keli",
      "containerName": "conversations",
      "id": "{id}",
      "partitionKey": "{id}"
    }
  ],
  "scriptFile": "__init__.py"
}